{
  inputs,
  outputs,
  stateVersion,
  username,
  colorscheme,
  terminal,
  browser,
  font,
  filemanager,
  sudo,
  ...
}:
let
  helpers = import ./helpers.nix {
    inherit
      inputs
      outputs
      stateVersion
      username
      colorscheme
      terminal
      font
      browser
      filemanager
      sudo
      ;
  };
in
{
  inherit (helpers)
    mkHome
    mkHost
    mkSystem
    forAllSystems
    ;
}
